//* product slider initialization *//
$(".product-slider__list").flickity({
  cellAlign: "left",
  contain: true,
  prevNextButtons: false,
  pageDots: true,
});

//* relocate burger button on mobile *//
$(function () {
  let width = $(window).width();
  let burgerBtn = $(".site-header__menu");
  let newLocation = $(".site-header__mobile-nav");
  if ( width < 750 ) {
    newLocation.prepend(burgerBtn);
    burgerBtn.css('padding-left', '20px')
  }
});
