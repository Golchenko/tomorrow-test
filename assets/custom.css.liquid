/*================ Color Variables ================*/
:root {
    --black: #040D09;
    --white: #ffffff;
    --grey: #525252;
    --gold: #897C51;
}

/*================ Fonts ================*/
@font-face {
    font-family: 'Akzidenz-Grotesk';
    src: url('AkzidenzGroteskBQ-Reg.woff2') format('woff2'),
        url('AkzidenzGroteskBQ-Reg.woff') format('woff');
    font-weight: 500;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Akzidenz-Grotesk Medium';
    src: url('AkzidenzGroteskBQ-Medium.woff2') format('woff2'),
        url('AkzidenzGroteskBQ-Medium.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

@font-face {
    font-family: 'Canela';
    src: url('Canela-Regular.woff2') format('woff2'),
        url('Canela-Regular.woff') format('woff');
    font-weight: 400;
    font-style: normal;
    font-display: swap;
}

/* Header */
.announcement-bar {
    padding: 0;
    border-bottom: none;
    display: flex;
    justify-content: flex-end;
}
.announcement-bar p,
.announcement-bar a {
    font-family: 'Akzidenz-Grotesk';
    font-size: 12px;
    font-weight: 500;
    line-height: 18px;
    letter-spacing: 0.25px;
    color: var(--white);
}

.announcement-bar .message-main {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
}

.site-header .site-nav__link--main {
    font-family: 'Akzidenz-Grotesk Medium';
    font-style: normal;
    font-weight: 500;
    font-size: 12px;
    line-height: 24px;
    letter-spacing: 1.5px;
    text-transform: uppercase;
    color: var(--black);
    padding: 3px 15px
}

.main-content{
    padding-top: 0;
}

@media screen and (max-width: 749px) {
    .announcement-bar__message.message-secondary {
        display: none;
    }

    .site-header__search-toggle,
    .site-header__account {
        display: none;
    }

    .site-header__logo-image {
        margin: 0 auto !important;
    }

    .site-header__icons {
        padding-left: 20px;
    }

    .site-header__logo {
        padding-left: 0 !important;
    }
}

/* Hero image */
.hero-image {
    padding-bottom: 62px;
}
.hero-image__container {
    max-width: 1440px;
    margin: 0 auto;
}

.hero-image__list {
    display: flex;
    width: auto;
}

.hero-image__item {
    position: relative;
    max-height: 800px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
}

.hero-image__link {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%);
    font-family: Canela;
    font-style: normal;
    font-weight: normal;
    font-size: 32px;
    line-height: 46px;
    color: var(--white);
}

.hero-image__link-text {
    display: flex;
    align-items: center;
    white-space: nowrap;
}

.hero-image__link-text .long-arrow-right {
    margin-left: 9px;
}

@media screen and (max-width: 749px) {
    .hero-image__list {
        flex-direction: column;
    }

    .hero-image__item {
        height: 450px;
    }
}

@media screen and (max-width: 460px) {
    .hero-image__item {
        height: 300px;
    }
}



/*product slider*/
.product-slider {
    padding-left: 64px;
}
.product-slider__heading {
    font-family: Canela;
    font-style: normal;
    font-weight: normal;
    font-size: 42px;
    line-height: 52px;
    letter-spacing: 0.5px;
    color: var(--black);
    text-transform: none;
    margin-bottom: 20px;
}

.product-slider__item {
    padding: 15px 50px 10px 10px;

}

.product-slider__item:last-child {
    padding-right: 0;
}

.product-item__image {
    width: 308px;
    height: 416px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 15px;
}

.product-item__title {
    font-family: 'Akzidenz-Grotesk';
    font-style: normal;
    font-weight: 500;
    font-size: 18px;
    line-height: 28px;
    margin-bottom: 8px;
}

.product-item__price {
    font-family: 'Akzidenz-Grotesk';
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: 0.25px;
    color: var(--grey);
}

.product-slider .flickity-page-dots {
    display: flex;
}
.product-slider .flickity-page-dots .dot{
    opacity: 0.2;
    border: 4px solid var(--grey);
    width: 100%;
}

.product-slider .flickity-page-dots .is-selected {
    border-color: var(--gold);
    opacity: 1;
}

@media screen and (max-width: 749px) {
    .product-slider__heading {
        font-size: 24px;
    }

    .product-item__image {
        width: 256px;
        height: 359px;
    }

    .product-item__title {
        font-size: 16px;
    }

    .product-slider {
        padding-left: 30px;
    }
}